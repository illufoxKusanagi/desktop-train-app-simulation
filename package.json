{
  "name": "train-simulation-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "./build.sh dev",
    "dev:backend": "cd backend && ./scripts/smart-run.sh",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "./build.sh prod",
    "build:backend": "cd backend && mkdir -p build && cd build && cmake .. && cmake --build .",
    "build:frontend": "cd frontend && npm run build",
    "clean": "./build.sh clean",
    "kill": "./backend/build/bin/TrainSimulationApp --port=9000"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
